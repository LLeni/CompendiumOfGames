<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.InputController" prefHeight="400.0" prefWidth="600.0" >
    <HBox alignment="CENTER">
    <GridPane fx:id="grid" >

            <Label fx:id="titleDescription" text="Описание игры" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1" />
            <Label fx:id="labelName" text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="1" /> <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="labelGenre" text="Жанр:" GridPane.columnIndex="0" GridPane.rowIndex="2" /> <TextField fx:id="genre" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="labelDev" text="Разработчик:" GridPane.columnIndex="0" GridPane.rowIndex="3" /> <TextField fx:id="dev" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="labelYear" text="Год:" GridPane.columnIndex="0" GridPane.rowIndex="4" /> <TextField fx:id="year" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="labelPlatform" text="Платформа:" GridPane.columnIndex="0" GridPane.rowIndex="5" /> <TextField fx:id="platform" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Button fx:id="btnAddGame" alignment="CENTER" onAction="#addGame" text="Добавить" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.fillWidth="true" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.rowSpan="1">
          <font>
             <Font name="Khmer OS" size="15.0" />
          </font></Button>
       <columnConstraints>
          <ColumnConstraints />
          <ColumnConstraints />
          <ColumnConstraints />
       </columnConstraints>
       <rowConstraints>
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
          <RowConstraints />
       </rowConstraints>

    </GridPane>
    </HBox>
</VBox>
